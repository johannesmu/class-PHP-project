<!doctype html>
<html lang="en">

<head>
    <title>{{ title }}</title>
    <meta name="viewport" content="width=device-width,initial=scale=1">
    <link rel="icon" href="assets/logo.png">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
    <link rel="stylesheet" href="styles/styles.css">
</head>

<body>
    {% include 'navigation.twig' %}
    <div class="container mt-3">
        <div class="row">
            {% for item in items %}
             <div class="col-md-3 mb-3">
                <div class="card" style="min-height: 30rem;">
                    <div class="card-body">
                        <img src="assets/cover_images/{{item.image}}" 
                            class="card-img-top" 
                            alt="Book Cover for {{item.title}}"
                            style="aspect-ratio: 3/4;object-fit: contain;"
                        >
                        <h5 class="card-title" style="min-height: 48px;">
                            {{item.title}}
                        </h5>
                        <p class="card-text">By {{item.author }}</p>
                        <a href="/detail.php?id={{item.id}}" class="btn btn-info">View detail</a>
                    </div>
                </div>
             </div>
            {% endfor %}
        </div>
        <!-- <h1>{{ greeting }}</h1> -->

    </div>
    {% include 'footer.twig' %}
</body>

</html>