<!doctype html>
<html lang="en">

{% include 'head.twig' %}

<body>
    {% include 'navigation.twig' %}
    <div class="container mt-3">
        <div class="row">
            {% for item in items %}
             <div class="col-md-3 mb-3">
                <div class="card" style="min-height: 30rem;">
                    <div class="card-body">
                        <img src="assets/cover_images/{{item.image}}" 
                            class="card-img-top" 
                            alt="Book Cover for {{item.title}}"
                            style="aspect-ratio: 3/4;object-fit: contain;"
                        >
                        <h5 class="card-title" style="min-height: 48px;">
                            {{item.title}}
                        </h5>
                        <p class="card-text">By {{item.author }}</p>
                        <div class="d-flex justify-content-between">
                            <a href="/detail.php?id={{item.id}}" class="btn btn-info">View detail</a>
                            {% if loggedin == true %}
                            <form action="/" method="post">
                                <input type="hidden" name="account_id" value="{{id}}">
                                <input type="hidden" name="book_id" value="{{item.id}}">
                                <button type="submit" name="favourite" value="add" class="btn btn-success">
                                    <i class="fa-solid fa-heart"></i>
                                </button>
                            </form>
                            {% endif %}
                        </div>
                    </div>
                </div>
             </div>
            {% endfor %}
        </div>
        <!-- <h1>{{ greeting }}</h1> -->

    </div>
    {% include 'footer.twig' %}
</body>

</html>