<!doctype html>
<html lang="en">

<head>
    <title>{{ title }}</title>
    <meta name="viewport" content="width=device-width,initial=scale=1">
    <link rel="icon" href="assets/logo.png">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
    <link rel="stylesheet" href="styles/styles.css">
</head>

<body>
    {% include 'navigation.twig' %}
    <div class="container mt-3">
        <div class="row">
           <div class="col-md-4">
                <img src="/assets/cover_images/{{ detail.image }}" class="img-fluid">
           </div>
           <div class="col-md-8">
                <h2>{{ detail.title }}</h2>
                <h5>{{ detail.tagline }}</h5>
                <h5>By {{ detail.author }}</h5>
                <ul class="list-group">
                    <li class="list-group-item">
                        <span class="text-uppercase">Year Published : </span>
                        {{ detail.year }}
                    </li>
                    <li class="list-group-item">
                        <span class="text-uppercase">Pages : </span>
                        {{ detail.pages }}
                    </li>
                    <li class="list-group-item">
                        <span class="text-uppercase">ISBN 10 : </span>
                        {{ detail.isbn10 }}
                    </li>
                    <li class="list-group-item">
                        <span class="text-uppercase">ISBN 13 : </span>
                        {{ detail.isbn13 }}
                    </li>
                </ul>
                <h4>Summary</h4>
                <p>{{ detail.summary }}</p>
           </div>
        </div>
    </div>
    {% include 'footer.twig' %}
</body>

</html>